{
  "swagger": "2.0",
  "info": {
    "title": "Reviewly",
    "description": "Keep track of your reviews",
    "version": "0.1"
  },
  "host": "localhost:3000",
  "consumes": [
    "application/json",
    "application/x-www-form-urlencoded"
  ],
  "produces": [
    "application/json"
  ],
  "basePath": "/api",
  "paths": {
    "/v1/reviews/{rid}": {
      "get": {
        "x-swagger-router-controller": "reviews",
        "operationId": "readReview",
        "security": [
          {
            "basicAuth": ["password"]
          }
        ],
        "tags": ["review"],
        "description": "Read a specific review by id",
        "parameters": [
        {
          "name": "rid",
          "in": "path",
          "description": "Review ID",
          "required": true,
          "type": "string"
        }
        ],
        "responses": {
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "Error"
            }
          },
          "200": {
            "description": "Successful request.",
            "schema": {
              "$ref": "Review"
            }
          }
        }
      }
    },
    "/v1/reviews": {
      "post": {
        "x-swagger-router-controller": "reviews",
        "operationId": "createReview",
        "tags": ["reviews"],
        "description": "Create a new review",
        "parameters": [
          {
            "name": "review",
            "in": "body",
            "description": "Review information",
            "required": true,
            "schema": {
              "$ref": "Review"
            }
          }
        ],
        "security": [
          {
            "basicAuth": ["password"]
          }
        ],
        "responses": {
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "Error"
            }
          },
          "200": {
            "description": "Successful request.",
            "schema": {
              "$ref": "Review"
            }
          }
        }
      }
    },
    "/v1/images": {
      "post": {
        "x-swagger-router-controller": "images",
        "operationId": "createImage",
        "tags": ["images"],
        "description": "Upload image",
        "consumes": [
          "multipart/form-data",
          "application/x-www-form-urlencoded"
        ],
        "parameters": [
          {
            "name": "file",
            "in": "formData",
            "type": "string",
            "description": "Image information",
            "required": true
          }
        ],
        "responses": {
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "Error"
            }
          },
          "200": {
            "description": "Successful request.",
            "schema": {
              "id": "string"
            }
          }
        }
      }
    },
    "/v1/images/{iid}": {
      "get": {
        "x-swagger-router-controller": "images",
        "operationId": "readImageURL",
        "tags": ["images"],
        "description": "Return URL of image given specific image identifier",
        "parameters": [
          {
            "name": "iid",
            "in": "path",
            "type": "string",
            "description": "Image Identifier"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful request.",
            "schema": {
              "url": "string"
            }
          },
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "Error"
            }
          }
        }
      }
    },
    "/v1/users": {
      "post": {
        "x-swagger-router-controller": "users",
        "operationId": "registerUser",
        "tags": ["users"],
        "description": "Register a new user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "The user information for registration",
            "required": true,
            "schema": {
              "$ref": "UserRegistration"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "Error"
            }
          },
          "200": {
            "description": "Successful request.",
            "schema": {
              "_id": "string"
            }
          }
        }
      }
    },
    "/v1/users/{uid}": {
      "get": {
        "x-swagger-router-controller": "users",
        "operationId": "profile",
        "tags": ["users"],
        "description": "Read profile of single user by passing in a username",
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "description": "Read the profile of a specific username",
            "required": true,
            "type": "string"
          }
        ],
        "security": [
          {
            "basicAuth": ["password"]
          }
        ],
        "responses": {
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "Error"
            }
          },
          "200": {
            "description": "Successful request.",
            "schema": {
              "reviews": "number",
              "points": "number",
              "rank": "string"
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "basicAuth": {
      "type": "basic"
    }
  },
  "definitions": {
    "Review": {
      "properties": {
        "company": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "rating": {
          "type": "number"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "datetime": {
          "type": "number"
        },
        "location": {
          "type": "string"
        },
        "_id": {
          "type": "string"
        },
        "submitter": {
          "type": "string"
        }
      },
      "required": ["company", "description"]
    },
    "UserRegistration": {
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Ok": {
      "properties": {
        "message": {
          "type": "string"
        }
      },
      "required": ["message"]
    },
    "Error": {
      "properties": {
        "message": {
          "type": "string"
        }
      },
      "required": ["message"]
    }
  }
}

