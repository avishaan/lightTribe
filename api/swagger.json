{
  "swagger": "2.0",
  "info": {
    "title": "Reviewly",
    "description": "Keep track of your reviews",
    "version": "0.1"
  },
  "host": "localhost:3000",
  "consumes": [
    "application/json",
    "application/x-www-form-urlencoded"
  ],
  "produces": [
    "application/json"
  ],
  "basePath": "/api",
  "paths": {
    "/v1/reviews/{rid}": {
      "get": {
        "x-swagger-router-controller": "reviews",
        "operationId": "readReview",
        "tags": ["review"],
        "description": "Read a specific review by id",
        "parameters": [
        {
          "name": "rid",
          "in": "path",
          "description": "Review ID",
          "required": true,
          "type": "string"
        }
        ],
        "responses": {
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "Error"
            }
          },
          "200": {
            "description": "Successful request.",
            "schema": {
              "$ref": "Review"
            }
          }
        }
      }
    },
    "/v1/reviews": {
      "post": {
        "x-swagger-router-controller": "reviews",
        "operationId": "createReview",
        "tags": ["reviews"],
        "description": "Create a new review",
        "responses": {
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "Error"
            }
          },
          "200": {
            "description": "Successful request.",
            "schema": {
              "$ref": "Ok"
            }
          }
        }
      }
    },
    "/v1/users": {
      "post": {
        "x-swagger-router-controller": "users",
        "operationId": "registerUser",
        "tags": ["users"],
        "description": "Register a new user",
        "responses": {
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "Error"
            }
          },
          "200": {
            "description": "Successful request.",
            "schema": {
              "$ref": "Ok"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Review": {
      "properties": {
        "company": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "rating": {
          "type": "number"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "datetime": {
          "type": "string"
        },
        "location": {
          "type": "string"
        }
      },
      "required": ["company"]
    },
    "Ok": {
      "properties": {
        "message": {
          "type": "string"
        }
      },
      "required": ["message"]
    },
    "Error": {
      "properties": {
        "message": {
          "type": "string"
        }
      },
      "required": ["message"]
    }
  }
}

